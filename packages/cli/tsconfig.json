{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/**/*.js"]
}
